
   <link rel="stylesheet" href = "/css/create_issue.css">

<section id="create-new-issue">

    <h1 style="text-align: center; margin-top: 10px;">Add New Issue</h1>

    <!-- form for submittng issue -->
    <form action="/projects/create_issue" method="POST">
            <div id="new-issue-name">
                <h3>Issue</h3>
                <input type="text" name="issueName" id="create-issue-name">
            </div>
        
            <div id="new-issue-description">
                <h3>Description</h3>
                <textarea rows="2" name="issueDescription"></textarea>
            </div>

            <div id="lable-container">
                <div id="lable-list">
                    <div id="tag-name">Lables: </div>
                </div>
                <h3>Lable</h3>
                <input type="hidden" name="lable" id="lables" value="">
                <input type="text"  id="add-label" list="lable-list-db" autocomplete="off" multiple>
                <datalist id="lable-list-db">
                    
                    <%for(issue of project.issues){%>
                        <% for(lable of issue.lable){%>
                              <option id="lab" value="<%=lable%>">
                        <%}%>
                     <%}%>
                      
                  </datalist>
                <br>
             
                <button id="add-lable-btn">Add lable</button>
            </div>

           <div id="new-issue-author">
                <h3>Author</h3>
                 <input type="text" name="issueAuthor" id="create-project-author">
           </div>
           <input type="hidden" name="projectID" value="<%=project.id%>">
        <button id="add-issue-btn">CREATE</button>        
  </form>
</section>

<script src="/js/create_issue.js"></script>